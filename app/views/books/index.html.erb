<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Isbn</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Publisher</th>
      <th>Title</th>
      <th>Serie title</th>
      <th>Volume</th>
      <th>Edition</th>
      <th>Publication year</th>
      <th>Pages</th>
      <th>Abstract</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.code %></td>
        <td><%= book.isbn %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.publisher %></td>
        <td><%= book.title %></td>
        <td><%= book.serie_title %></td>
        <td><%= book.volume %></td>
        <td><%= book.edition %></td>
        <td><%= book.publication_year %></td>
        <td><%= book.pages %></td>
        <td><%= book.abstract %></td>
        <td><%= book.active %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

